<?xml version="1.0"?>
<config>
    <modules>
        <BlueAcorn_OrderExport>
            <version>1.0.0.0</version>
        </BlueAcorn_OrderExport>
    </modules>
    <global>
        <models>
            <blueacorn_order_export>
                <class>BlueAcorn_OrderExport_Model</class>
            </blueacorn_order_export>
        </models>
        <events>
            <sales_order_place_after>
                <observers>
                    <blueacorn_export_order>
                        <class>BlueAcorn_OrderExport_Model_Export</class>
                        <method>observeOrderSave</method>
                    </blueacorn_export_order>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    <blueacorn>
        <export>
            <order>
                <status>status</status>
                <firstname>customer_firstname</firstname>
                <lastname>customer_lastname</lastname>
                <email>customer_email</email>
                <billing>
                    <city>billing.city</city>
                    <zip>billing.postcode</zip>
                    <address>billing.street</address>
                    <phone>billing.telephone</phone>
                    <shipping>
                        <receiper>shipping.firstname</receiper>
                    </shipping>
                </billing>
            </order>
        </export>
    </blueacorn>
</config>
